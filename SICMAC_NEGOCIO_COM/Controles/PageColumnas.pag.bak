cboFormatoCol.AddItem "0 - General"
cboFormatoCol.AddItem "1 - Sólo Letras"
cboFormatoCol.AddItem "2 - Decimales"
cboFormatoCol.AddItem "3 - Enteros"
cboFormatoCol.AddItem "4 - Billetaje"
